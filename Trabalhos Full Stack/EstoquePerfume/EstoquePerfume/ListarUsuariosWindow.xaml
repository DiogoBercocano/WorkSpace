<Window x:Class="EstoquePerfumes.ListarUsuariosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lista de Usuários"
        Height="450" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#111111"
        FontFamily="Segoe UI">

    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect"
                          BlurRadius="15"
                          ShadowDepth="4"
                          Opacity="0.3"
                          Color="#000"/>
        <SolidColorBrush x:Key="GoldBrush" Color="#FFD700"/>
        <SolidColorBrush x:Key="DarkGrayBrush" Color="#232323"/>
        <SolidColorBrush x:Key="LightGrayBrush" Color="#CCCCCC"/>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="{StaticResource DarkGrayBrush}" CornerRadius="20" 
                Padding="15" Effect="{StaticResource DropShadowEffect}" Grid.Row="0">
            <DataGrid x:Name="dataGridUsuarios" AutoGenerateColumns="False" IsReadOnly="True" 
                      Background="{StaticResource DarkGrayBrush}" Foreground="{StaticResource LightGrayBrush}"
                      HeadersVisibility="Column" BorderThickness="0" RowHeight="38" FontSize="14" 
                      AlternatingRowBackground="#323232" GridLinesVisibility="None" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60" />
                    <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*" />
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*" />
                    <DataGridTextColumn Header="Nível de Acesso" Binding="{Binding NivelAcesso}" Width="120" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Button x:Name="btnVoltar" Grid.Row="1" Content="Voltar" HorizontalAlignment="Right" Margin="0,10,0,0" Padding="15,5"
                Background="{StaticResource GoldBrush}" Foreground="#111111" FontWeight="Bold" FontSize="14"
                BorderThickness="0" Cursor="Hand" Width="120" Click="btnVoltar_Click_1">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="{StaticResource GoldBrush}"/>
                    <Setter Property="Foreground" Value="#111111"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="12">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#E8C44C"/>
                            <Setter Property="Foreground" Value="#232323"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#C0A75A"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
