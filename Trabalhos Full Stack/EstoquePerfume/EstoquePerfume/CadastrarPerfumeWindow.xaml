<Window x:Class="EstoquePerfumes.CadastrarPerfumeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gerenciar Perfumes" Height="560" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#111111"
        FontFamily="Segoe UI">

    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" BlurRadius="18" ShadowDepth="5" Opacity="0.38" Color="#000"/>
        <SolidColorBrush x:Key="GoldBrush" Color="#FFD700"/>
        <SolidColorBrush x:Key="DarkGrayBrush" Color="#232323"/>
        <SolidColorBrush x:Key="LightGrayBrush" Color="#CCCCCC"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Listagem -->
        <Border Grid.Column="0" Background="{StaticResource DarkGrayBrush}" CornerRadius="24" Padding="20" Margin="0,0,20,0" Effect="{StaticResource DropShadowEffect}">
            <StackPanel>
                <TextBlock Text="Lista de Perfumes" FontSize="24" FontWeight="Bold" Foreground="{StaticResource GoldBrush}" Margin="0,0,0,18"/>
                <DataGrid x:Name="dgPerfumes" AutoGenerateColumns="False" IsReadOnly="True" Height="400" SelectionMode="Single" SelectionChanged="dgPerfumes_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                        <DataGridTextColumn Header="Gênero" Binding="{Binding Genero}" Width="100"/>
                        <DataGridTextColumn Header="Quantidade (ml)" Binding="{Binding Ml}" Width="120"/>
                        <DataGridTextColumn Header="Valor (R$)" Binding="{Binding Valor}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>

        <!-- Formulário -->
        <Border Grid.Column="1" Background="{StaticResource DarkGrayBrush}" CornerRadius="24" Padding="20" Effect="{StaticResource DropShadowEffect}">
            <StackPanel Cursor="">
                <TextBlock Text="Cadastrar / Alterar" FontSize="24" FontWeight="Bold" Foreground="{StaticResource GoldBrush}" Margin="0,0,0,18"/>

                <TextBlock Text="Nome:" Foreground="{StaticResource LightGrayBrush}" Margin="0,0,0,4"/>
                <TextBox x:Name="txtNome" Height="30" Padding="4" FontSize="14" Background="#181818" Foreground="White"/>

                <TextBlock Text="Gênero:" Foreground="{StaticResource LightGrayBrush}" Margin="10,10,0,4"/>
                <TextBox x:Name="txtGenero" Height="30" Padding="4" FontSize="14" Background="#181818" Foreground="White"/>

                <TextBlock Text="Quantidade (ml):" Foreground="{StaticResource LightGrayBrush}" Margin="10,10,0,4"/>
                <TextBox x:Name="txtMl" Height="30" Padding="4" FontSize="14" Background="#181818" Foreground="White"/>

                <TextBlock Text="Valor (R$):" Foreground="{StaticResource LightGrayBrush}" Margin="10,10,0,8"/>
                <TextBox x:Name="txtValor" Height="30" Padding="4" FontSize="14" Background="#181818" Foreground="White"/>

                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,18,0,0">
                    <Button Content="Cadastrar/Salvar" Width="130" Height="34" Cursor="Hand"
                        Background="{StaticResource GoldBrush}" Foreground="#181818"
                        FontWeight="SemiBold" Click="btnSalvar_Click" Margin="0,0,0,10"/>
                    <Button Content="Excluir" Width="100" Height="34" Cursor="Hand"
                        Background="#b33007" Foreground="White"
                        FontWeight="SemiBold" Click="btnExcluir_Click" Margin="0,0,0,10"/>
                    <Button Content="Voltar" Width="100" Height="34"
                        Background="#232323" Foreground="{StaticResource GoldBrush}"
                        BorderBrush="{StaticResource GoldBrush}" BorderThickness="2"
                        Cursor="Hand" FontWeight="SemiBold" Click="btnVoltar_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
