<Window x:Class="EstoquePerfumes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menu Principal - Estoque de Perfumes" Height="480" Width="880"
        WindowStartupLocation="CenterScreen"
        Background="#111111"
        FontFamily="Segoe UI">

    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect"
                          BlurRadius="18"
                          ShadowDepth="5"
                          Opacity="0.38"
                          Color="#000"/>
        <SolidColorBrush x:Key="GoldBrush" Color="#FFD700"/>
        <SolidColorBrush x:Key="DarkGrayBrush" Color="#232323"/>
        <SolidColorBrush x:Key="LightGrayBrush" Color="#CCCCCC"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Painel lateral -->
        <Border Grid.Column="0"
                Background="#181818"
                CornerRadius="18,0,0,18"
                Padding="0,30"
                Effect="{StaticResource DropShadowEffect}">
            <StackPanel VerticalAlignment="Top">
                <Image Source="/EstoquePerfume;component/Assets/Logo.jpg" Width="110" Margin="30,0,0,28"/>
                <TextBlock Text="Estoque de Perfumes"
                           Foreground="{StaticResource GoldBrush}"
                           FontWeight="Bold"
                           FontSize="18"
                           Margin="30,0,0,36"/>
            </StackPanel>
        </Border>

        <!-- Card central -->
        <Border Grid.Column="1"
                Background="{StaticResource DarkGrayBrush}"
                CornerRadius="24"
                Padding="38"
                Margin="35"
                Effect="{StaticResource DropShadowEffect}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="txtSaudacao"
                    Grid.Row="0"
                    Text="Olá, [Nome do Usuário]!"
                    FontSize="26"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource GoldBrush}"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"/>

                <StackPanel Grid.Row="1" Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,14,0,0">

                    <Button x:Name="btnListarPerfumes"
                        Content="Ver Lista de Perfumes"
                        Width="265" Height="44"
                        Margin="0,8"
                        FontSize="16" FontWeight="Bold"
                        Background="{StaticResource GoldBrush}"
                        Foreground="#181818" BorderThickness="0"
                        Cursor="Hand"
                        Click="btnListarPerfumes_Click">
                        <!-- ... [Style igual ao seu modelo anterior] ... -->
                    </Button>

                    <Button x:Name="btnCadastrarPerfume"
                        Content="Cadastrar Novo Perfume"
                        Width="265" Height="44"
                        Margin="0,8"
                        FontSize="16" FontWeight="Bold"
                        Background="#232323"
                        Foreground="{StaticResource GoldBrush}"
                        BorderBrush="{StaticResource GoldBrush}" BorderThickness="2"
                        Cursor="Hand"
                        Click="btnCadastrarPerfume_Click">
                        <!-- ... [Style igual ao seu modelo anterior] ... -->
                    </Button>

                    <Button x:Name="btnListarUsuarios"
                        Content="Listar Usuários"
                        Width="265" Height="44"
                        Margin="0,8"
                        FontSize="16" FontWeight="Bold"
                        Background="#232323"
                        Foreground="{StaticResource GoldBrush}"
                        BorderBrush="{StaticResource GoldBrush}" BorderThickness="2"
                        Cursor="Hand"
                        Click="btnListarUsuarios_Click">
                        <!-- ... [Style igual ao seu modelo anterior] ... -->
                    </Button>
                </StackPanel>

                <Button x:Name="btnLogoff" Grid.Row="2"
                        Content="Logoff"
                        Width="110" Height="34"
                        HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        Padding="8"
                        Margin="0,24,0,0"
                        Background="#232323" Foreground="{StaticResource GoldBrush}"
                        BorderBrush="{StaticResource GoldBrush}" BorderThickness="2"
                        FontWeight="SemiBold" FontSize="14" Cursor="Hand"
                        Click="btnLogoff_Click">
                    <!-- ... [Style igual ao seu modelo anterior] ... -->
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
