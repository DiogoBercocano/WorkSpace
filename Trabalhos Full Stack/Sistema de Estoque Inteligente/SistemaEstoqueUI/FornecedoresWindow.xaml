<Window x:Class="SistemaEstoqueUI.FornecedoresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fornecedores"
        MinWidth="900" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        ResizeMode="CanResize"
        WindowStyle="None"
        Background="#F4F6FA">

    <Window.Resources>
        <DropShadowEffect x:Key="CardShadow" BlurRadius="22" Color="#4666F5" Opacity="0.12" ShadowDepth="0"/>
        <Style x:Key="RoundButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="MinHeight" Value="46"/>
            <Setter Property="MinWidth" Value="155"/>
            <Setter Property="Padding" Value="20,6"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="22">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- HEADER -->
        <Border Height="90" VerticalAlignment="Top" CornerRadius="0 0 32 32">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#4666F5" Offset="0"/>
                    <GradientStop Color="#63B6FF" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="1" Color="#6B81B8" Opacity="0.13"/>
            </Border.Effect>
            <Grid>
                <TextBlock Text="Fornecedores" Foreground="White" FontWeight="Bold" FontSize="27"
                           VerticalAlignment="Center" Margin="34,0,0,0" HorizontalAlignment="Left"/>
                <Button Content="×" Width="32" Height="32" FontSize="20" FontWeight="Bold"
                        Foreground="#E5E7F7" Background="Transparent" BorderThickness="0" Cursor="Hand"
                        HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,22,0"
                        Click="BtnFechar_Click"/>
            </Grid>
        </Border>

        <!-- CARD CENTRAL COM SCROLL -->
        <Grid Margin="0,120,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="84*"/>
                <ColumnDefinition Width="8*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="1" CornerRadius="36" Padding="44"
                    MinWidth="900" MinHeight="600" VerticalAlignment="Center" HorizontalAlignment="Center"
                    BorderBrush="#E3E7F0" BorderThickness="1.6" Effect="{StaticResource CardShadow}">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#F8FAFC" Offset="0.05"/>
                        <GradientStop Color="#E9EDF5" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="600" Padding="0 0 12 0">
                    <StackPanel>
                        <TextBlock Text="Fornecedores Cadastrados" FontSize="26" FontWeight="Bold"
                                   FontFamily="Segoe UI" Foreground="#1E2A38" HorizontalAlignment="Center" Margin="0 0 0 10"/>
                        <TextBlock Text="Gerencie, edite e consulte os fornecedores cadastrados"
                                   FontSize="16" FontFamily="Segoe UI" Foreground="#4666F5" Opacity="0.85"
                                   HorizontalAlignment="Center" Margin="0 0 0 24"/>
                        <Border CornerRadius="20" Background="#FAFBFF" BorderBrush="#B8CCE7" BorderThickness="2" Margin="0 0 0 16">
                            <DataGrid x:Name="dataGridFornecedores"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      IsReadOnly="True"
                                      SelectionMode="Single"
                                      MinHeight="380"
                                      Background="White"
                                      BorderThickness="0"
                                      RowHeight="38"
                                      HorizontalGridLinesBrush="#E6ECFA"
                                      HeadersVisibility="Column"
                                      AlternatingRowBackground="#F4F6FA"
                                      HorizontalAlignment="Stretch"
                                      Margin="6">
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Foreground" Value="#263259"/>
                                        <Setter Property="FontSize" Value="16"/>
                                        <Setter Property="BorderThickness" Value="0 0 0 2"/>
                                        <Setter Property="BorderBrush" Value="#E6ECFA"/>
                                        <Setter Property="Background" Value="#F4F6FA"/>
                                    </Style>
                                </DataGrid.Resources>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding FornecedorId}" Width="85"/>
                                    <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="300"/>
                                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="250"/>
                                    <DataGridTextColumn Header="Telefone" Binding="{Binding Telefone}" Width="170"/>
                                    <!-- Adicione mais colunas conforme precisar -->
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
                            <Button Content="Adicionar Fornecedor" Style="{StaticResource RoundButton}"
                                    Background="#4666F5" Click="BtnAdicionar_Click"/>
                            <Button Content="Editar Fornecedor" Style="{StaticResource RoundButton}" Background="#FFD600" Foreground="#263259"
                                    Click="BtnEditar_Click"/>
                            <Button Content="Excluir Fornecedor" Style="{StaticResource RoundButton}" Background="#E63757" Click="BtnExcluir_Click"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>