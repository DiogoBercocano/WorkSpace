<Window x:Class="SistemaEstoqueUI.FornecedorFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Fornecedor"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="#EEF1F4"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Botão azul arredondado -->
        <Style x:Key="RoundedBlueButton" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4A90E2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="12" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Botão cinza -->
        <Style x:Key="GrayButton" TargetType="Button" BasedOn="{StaticResource RoundedBlueButton}">
            <Setter Property="Background" Value="#6B6B6B"/>
            <Setter Property="BorderBrush" Value="#565656"/>
        </Style>
    </Window.Resources>

    <!-- Layout principal -->
    <Border Background="White"
            CornerRadius="16"
            Padding="40"
            Margin="30">
        <StackPanel Margin="0,0,0,-13">

            <!-- Título -->
            <TextBlock Text="Cadastro de Fornecedor"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#1E2A38"
                       Margin="0 0 0 30"/>

            <!-- Nome -->
            <TextBlock Text="Nome do Fornecedor"
                       FontSize="15"
                       FontWeight="SemiBold"
                       Foreground="#1E2A38"
                       Margin="0 0 0 8"/>
            <Border Background="#F9FAFB"
                    BorderBrush="#CBD5E1"
                    BorderThickness="1.5"
                    CornerRadius="8"
                    Height="42">
                <TextBox x:Name="txtNome"
                         FontSize="14"
                         Padding="8"
                         Background="Transparent"
                         BorderThickness="0"/>
            </Border>

            <!-- Email -->
            <TextBlock Text="Email (opcional)"
                       FontSize="15"
                       FontWeight="SemiBold"
                       Foreground="#1E2A38"
                       Margin="20 20 0 8"/>
            <Border Background="#F9FAFB"
                    BorderBrush="#CBD5E1"
                    BorderThickness="1.5"
                    CornerRadius="8"
                    Height="42">
                <TextBox x:Name="txtEmail"
                         FontSize="14"
                         Padding="8"
                         Background="Transparent"
                         BorderThickness="0"/>
            </Border>

            <!-- Telefone -->
            <TextBlock Text="Telefone (opcional)"
                       FontSize="15"
                       FontWeight="SemiBold"
                       Foreground="#1E2A38"
                       Margin="20 20 0 8"/>
            <Border Background="#F9FAFB"
                    BorderBrush="#CBD5E1"
                    BorderThickness="1.5"
                    CornerRadius="8"
                    Height="42">
                <TextBox x:Name="txtTelefone"
                         FontSize="14"
                         Padding="8"
                         Background="Transparent"
                         BorderThickness="0"/>
            </Border>

            <!-- Botões -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0 30 0 0">
                <Button Content="Cancelar" Style="{StaticResource GrayButton}" Click="BtnCancelar_Click"/>
                <Button Content="Salvar" Style="{StaticResource RoundedBlueButton}" Click="BtnSalvar_Click"/>
            </StackPanel>

        </StackPanel>
    </Border>
</Window>
