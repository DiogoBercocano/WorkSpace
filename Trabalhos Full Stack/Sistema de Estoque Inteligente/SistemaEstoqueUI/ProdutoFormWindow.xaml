<Window x:Class="SistemaEstoqueUI.ProdutoFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Produto"
        Height="520" Width="430"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="#EEF1F4"
        AllowsTransparency="True">
    <Window.Resources>
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="BorderBrush" Value="#4A90E2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style x:Key="CancelButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Background" Value="#CBD5E1"/>
            <Setter Property="Foreground" Value="#506070"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
        </Style>
    </Window.Resources>

    <Grid Background="Transparent">
        <Border CornerRadius="22" Background="#F8FAFC" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="0">
                    <StackPanel>
                        <TextBlock Text="Cadastro de Produto"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   FontFamily="Segoe UI"
                                   Foreground="#1E2A38"
                                   HorizontalAlignment="Center"
                                   Margin="0 0 0 18"/>

                        <!-- Nome -->
                        <StackPanel Margin="0 0 0 12">
                            <TextBlock Text="Nome"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="#506070"
                                       Margin="4 0"/>
                            <Border CornerRadius="8" Background="#FFFFFF" BorderBrush="#CBD5E1" BorderThickness="1.3">
                                <TextBox x:Name="txtNome"
                                         Height="42"
                                         FontSize="15"
                                         Padding="10"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="#1E2A38"
                                         CaretBrush="#4A90E2"/>
                            </Border>
                        </StackPanel>

                        <!-- Quantidade -->
                        <StackPanel Margin="0 0 0 12">
                            <TextBlock Text="Quantidade"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="#506070"
                                       Margin="4 0"/>
                            <Border CornerRadius="8" Background="#FFFFFF" BorderBrush="#CBD5E1" BorderThickness="1.3">
                                <TextBox x:Name="txtQuantidade"
                                         Height="42"
                                         FontSize="15"
                                         Padding="10"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="#1E2A38"
                                         CaretBrush="#4A90E2"/>
                            </Border>
                        </StackPanel>

                        <!-- Preço -->
                        <StackPanel Margin="0 0 0 24">
                            <TextBlock Text="Preço"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="#506070"
                                       Margin="4 0"/>
                            <Border CornerRadius="8" Background="#FFFFFF" BorderBrush="#CBD5E1" BorderThickness="1.3">
                                <TextBox x:Name="txtPreco"
                                         Height="42"
                                         FontSize="15"
                                         Padding="10"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="#1E2A38"
                                         CaretBrush="#4A90E2"/>
                            </Border>
                        </StackPanel>

                        <!-- Categoria -->
                        <StackPanel Margin="0 0 0 12">
                            <TextBlock Text="Categoria"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="#506070"
                                       Margin="4 0"/>
                            <Border CornerRadius="8" Background="white" BorderBrush="#CBD5E1" BorderThickness="1.3">
                                <ComboBox x:Name="cmbCategoria"
                                          Height="42"
                                          FontSize="15"
                                          Padding="10"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          Foreground="#1E2A38"
                                          DisplayMemberPath="Nome"
                                          SelectedValuePath="CategoriaId" />
                            </Border>
                        </StackPanel>

                        <!-- Fornecedor -->
                        <StackPanel Margin="0 0 0 12">
                            <TextBlock Text="Fornecedor"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="#506070"
                                       Margin="4 0"/>
                            <Border CornerRadius="8" Background="#FFFFFF" BorderBrush="#CBD5E1" BorderThickness="1.3">
                                <ComboBox x:Name="cmbFornecedor"
                                          Height="42"
                                          FontSize="15"
                                          Padding="10"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          Foreground="#1E2A38"
                                          DisplayMemberPath="Nome"
                                          SelectedValuePath="FornecedorId" />
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="0 12 0 0">
                    <Button Content="Cancelar"
                            Style="{StaticResource CancelButton}"
                            Width="100" Click="BtnCancelar_Click"/>
                    <Button Content="Salvar"
                            Style="{StaticResource RoundedButton}"
                            Width="100" Click="BtnSalvar_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
