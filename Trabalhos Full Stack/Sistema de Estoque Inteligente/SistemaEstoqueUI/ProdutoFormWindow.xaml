<Window x:Class="SistemaEstoqueUI.ProdutoFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Produto"
        Background="#F0F2F5"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        WindowStyle="None"
        WindowState="Maximized"
        AllowsTransparency="True">

    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Margin" Value="8 0 0 0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="24">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#AAAAAA"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0 0 8 0"/>
            <Setter Property="Padding" Value="20,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="24">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="FormTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#222"/>
            <Setter Property="Margin" Value="0 0 0 24"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="Margin" Value="4 0 0 8"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        <Style x:Key="InputTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0 0 0 20"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Foreground" Value="#111"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="InputComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0 0 0 20"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Foreground" Value="#111"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>
    </Window.Resources>

    <Grid Margin="48">
        <Border Background="White" CornerRadius="20" Padding="40" MaxWidth="700" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Cadastro de Produto" Style="{StaticResource FormTitle}" Grid.Row="0"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel>
                        <TextBlock Text="Nome" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtNome" Style="{StaticResource InputTextBox}" />

                        <TextBlock Text="Quantidade" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtQuantidade" Style="{StaticResource InputTextBox}" />

                        <TextBlock Text="Preço" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtPreco" Style="{StaticResource InputTextBox}" />

                        <TextBlock Text="Categoria" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="cmbCategoria" Style="{StaticResource InputComboBox}" 
                                  DisplayMemberPath="Nome" SelectedValuePath="CategoriaId"/>

                        <TextBlock Text="Fornecedor" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="cmbFornecedor" Style="{StaticResource InputComboBox}" 
                                  DisplayMemberPath="Nome" SelectedValuePath="FornecedorId"/>
                    </StackPanel>
                </ScrollViewer>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
                    <Button Content="Cancelar" Style="{StaticResource SecondaryButton}" Width="130" Click="BtnCancelar_Click"/>
                    <Button Content="Salvar" Style="{StaticResource PrimaryButton}" Width="130" Click="BtnSalvar_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
