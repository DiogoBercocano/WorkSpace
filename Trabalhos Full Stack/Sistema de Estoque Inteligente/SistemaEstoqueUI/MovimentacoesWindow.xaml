<Window x:Class="SistemaEstoqueUI.MovimentacoesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Movimentações de Estoque"
        MinWidth="900" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        ResizeMode="CanResize"
        WindowStyle="None"
        Background="#F4F6FA">

    <Window.Resources>
        <DropShadowEffect x:Key="CardShadow" BlurRadius="22" Color="#4666F5" Opacity="0.12" ShadowDepth="0"/>
        <Style x:Key="RoundButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="MinHeight" Value="46"/>
            <Setter Property="MinWidth" Value="155"/>
            <Setter Property="Padding" Value="20,6"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="22">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="RoundGrayButton" TargetType="Button" BasedOn="{StaticResource RoundButton}">
            <Setter Property="Background" Value="#6B6B6B"/>
            <Setter Property="BorderBrush" Value="#565656"/>
        </Style>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <!-- HEADER -->
        <Border Height="90" VerticalAlignment="Top" CornerRadius="0 0 32 32">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#4666F5" Offset="0"/>
                    <GradientStop Color="#63B6FF" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="1" Color="#6B81B8" Opacity="0.13"/>
            </Border.Effect>
            <Grid>
                <TextBlock Text="Movimentações de Estoque" Foreground="White" FontWeight="Bold" FontSize="27"
                           VerticalAlignment="Center" Margin="34,0,0,0" HorizontalAlignment="Left"/>
                <Button Content="×" Width="32" Height="32" FontSize="20" FontWeight="Bold"
                        Foreground="#E5E7F7" Background="Transparent" BorderThickness="0" Cursor="Hand"
                        HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,22,0"
                        Click="BtnFechar_Click"/>
            </Grid>
        </Border>

        <!-- CARD CENTRAL SEM BOTÕES -->
        <Grid Margin="0,120,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="84*"/>
                <ColumnDefinition Width="8*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="1" CornerRadius="36" Padding="44"
                    MinWidth="900" MinHeight="600" VerticalAlignment="Center" HorizontalAlignment="Center"
                    BorderBrush="#E3E7F0" BorderThickness="1.6" Effect="{StaticResource CardShadow}">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#F8FAFC" Offset="0.05"/>
                        <GradientStop Color="#E9EDF5" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="600" Padding="0 0 12 0">
                    <StackPanel>
                        <TextBlock Text="Movimentações Cadastradas" FontSize="26" FontWeight="Bold"
                                   FontFamily="Segoe UI" Foreground="#1E2A38" HorizontalAlignment="Center" Margin="0 0 0 10"/>
                        <TextBlock Text="Visualize as movimentações de estoque registradas"
                                   FontSize="16" FontFamily="Segoe UI" Foreground="#4666F5" Opacity="0.85"
                                   HorizontalAlignment="Center" Margin="0 0 0 24"/>
                        <DataGrid x:Name="dataGridMovimentacoes" AutoGenerateColumns="False" CanUserAddRows="False"
                                  IsReadOnly="True" SelectionMode="Single" MinHeight="380" Background="White"
                                  BorderThickness="0" RowHeight="38" HorizontalGridLinesBrush="#E6ECFA"
                                  HeadersVisibility="Column" AlternatingRowBackground="#F4F6FA"
                                  HorizontalAlignment="Stretch" Margin="6">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Foreground" Value="#263259"/>
                                    <Setter Property="FontSize" Value="16"/>
                                    <Setter Property="BorderThickness" Value="0 0 0 2"/>
                                    <Setter Property="BorderBrush" Value="#E6ECFA"/>
                                    <Setter Property="Background" Value="#F4F6FA"/>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="75"/>
                                <DataGridTextColumn Header="Produto" Binding="{Binding Produto}" Width="220"/>
                                <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="90"/>
                                <DataGridTextColumn Header="Quantidade" Binding="{Binding Quantidade}" Width="90"/>
                                <DataGridTextColumn Header="Estoque Atual" Binding="{Binding SaldoAposMovimentacao}" Width="120"/>
                                <DataGridTextColumn Header="Data" Binding="{Binding Data, StringFormat='dd/MM/yyyy HH:mm'}" Width="145"/>
                                <DataGridTemplateColumn Header="Reposição" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="Repor" Foreground="Red" FontWeight="Bold" HorizontalAlignment="Center"
                                                       Visibility="{Binding NecessitaReposicao, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>
