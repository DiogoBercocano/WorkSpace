<Window x:Class="SistemaEstoqueUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Estoque"
        Height="680" Width="1100"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="#F7F9FC">

    <Window.Resources>
        <!-- Card Animations -->
        <Storyboard x:Key="CardHoverIn">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                             To="1.03" Duration="0:0:0.13"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                             To="1.03" Duration="0:0:0.13"/>
        </Storyboard>
        <Storyboard x:Key="CardHoverOut">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                             To="1" Duration="0:0:0.13"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                             To="1" Duration="0:0:0.13"/>
        </Storyboard>

        <!-- Botão amplo e moderno -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#4C8EF7"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="18,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="145"/>
            <Setter Property="Height" Value="47"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5A9CFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3978E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Botão Logout moderno -->
        <Style x:Key="LogoutButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#E74C3C"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Width" Value="108"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="9">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C0392B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card moderno -->
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="19"/>
            <Setter Property="Padding" Value="24 20"/>
            <Setter Property="Margin" Value="16"/>
            <Setter Property="Width" Value="325"/>
            <Setter Property="Height" Value="180"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#F8F9FB" Offset="0"/>
                        <GradientStop Color="#E9EDF5" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="14" ShadowDepth="3" Color="#B0C2DA" Opacity="0.21"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <EventSetter Event="MouseEnter" Handler="Card_MouseEnter"/>
            <EventSetter Event="MouseLeave" Handler="Card_MouseLeave"/>
        </Style>

    </Window.Resources>

    <Grid>
        <!-- Header -->
        <Border Height="100"
                VerticalAlignment="Top"
                CornerRadius="0 0 30 30">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#4666F5" Offset="0"/>
                    <GradientStop Color="#63B6FF" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="1" Color="#6B81B8" Opacity="0.23"/>
            </Border.Effect>
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="34,0,0,0">
                    <TextBlock Text="Sistema de Estoque"
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="26"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <Button Content="Logout"
                        Style="{StaticResource LogoutButton}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,36,0"
                        Click="BtnLogout_Click"/>
            </Grid>
        </Border>

        <!-- Conteúdo -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,40,0,0">
            <TextBlock Text="Dashboard"
                       FontSize="33"
                       FontWeight="Bold"
                       Foreground="#1E2A38"
                       Margin="0 0 0 28"
                       HorizontalAlignment="Center"
                       Opacity="0.93"/>

            <UniformGrid Columns="2" Rows="2">
                <Border Style="{StaticResource ModernCard}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Produtos" FontWeight="Bold" FontSize="18" Foreground="#4666F5" Margin="0,0,0,7"/>
                        <TextBlock Text="Gerencie seu estoque" FontSize="13" Foreground="#5B6478" Margin="0 0 0 14"/>
                        <Button Content="Acessar" Style="{StaticResource ModernButton}" Click="BtnProdutos_Click"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource ModernCard}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Categorias" FontWeight="Bold" FontSize="18" Foreground="#4666F5" Margin="0,0,0,7"/>
                        <TextBlock Text="Classifique os itens" FontSize="13" Foreground="#5B6478" Margin="0 0 0 14"/>
                        <Button Content="Acessar" Style="{StaticResource ModernButton}" Click="BtnCategorias_Click"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource ModernCard}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Fornecedores" FontWeight="Bold" FontSize="18" Foreground="#4666F5" Margin="0,0,0,7"/>
                        <TextBlock Text="Gerencie os parceiros" FontSize="13" Foreground="#5B6478" Margin="0 0 0 14"/>
                        <Button Content="Acessar" Style="{StaticResource ModernButton}" Click="BtnFornecedores_Click"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource ModernCard}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Movimentações" FontWeight="Bold" FontSize="18" Foreground="#4666F5" Margin="0,0,0,7"/>
                        <TextBlock Text="Entradas e saídas" FontSize="13" Foreground="#5B6478" Margin="0 0 0 14"/>
                        <Button Content="Acessar" Style="{StaticResource ModernButton}" Click="BtnMovimentacoes_Click"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </StackPanel>
    </Grid>
</Window>
